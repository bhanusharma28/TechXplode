@{
    ViewData["Title"] = "Contact Us - Techxplode";
    var successMessage = TempData["SuccessMessage"] as string;
    var errorMessage = TempData["ErrorMessage"] as string;
}

<div class="container mt-5">
    <div class="row justify-content-center animated">
        <div class="col-lg-8">
            <h1 class="text-center mb-4 fw-bold">Contact Us</h1>
            <p class="lead text-muted text-center">
                Have a question or need assistance? Fill out the form below, and we'll get back to you as soon as possible.
            </p>

            <div class="card border-0 shadow-sm p-4">
                <h2 class="h4 fw-semibold">Get in Touch</h2>
                <form method="post" action="Contact">
                    <div class="mb-3">
                        <label for="name" class="form-label fw-semibold">Your Name</label>
                        <input type="text" id="name" name="Name" class="form-control" placeholder="Enter your name" required>
                    </div>

                    <div class="mb-3">
                        <label for="email" class="form-label fw-semibold">Your Email</label>
                        <input type="email" id="email" name="Email" class="form-control" placeholder="Enter your email" required>
                    </div>

                    <div class="mb-3">
                        <label for="message" class="form-label fw-semibold">Your Message</label>
                        <textarea id="message" name="Message" class="form-control" rows="5" placeholder="Write your message here..." required></textarea>
                    </div>

                    <button type="submit" class="btn btn-primary w-100">Send Message</button>
                </form>
            </div>

            <div class="card border-0 shadow-sm p-4 mt-4">
                <h2 class="h4 fw-semibold">Other Ways to Reach Us</h2>
                <p class="fw-semibold">
                    <strong>Techxplode</strong><br>
                    Email: <a href="mailto:techxplode@gmail.com" class="text-decoration-none">techxplode@gmail.com</a><br>
                </p>
            </div>
        </div>
    </div>
</div>

<!-- Modal for Popup -->
<div class="modal fade" id="popupModal" tabindex="-1" aria-labelledby="popupModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="popupModalLabel">Message</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <!-- Success or Error message will be inserted here -->
                <p id="popupMessage"></p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

<!-- Popup Message Logic using JavaScript -->
@section Scripts {
    @if (!string.IsNullOrEmpty(successMessage))
    {
        <script>
            document.getElementById('popupMessage').innerText = '@successMessage';
            var myModal = new bootstrap.Modal(document.getElementById('popupModal'));
            myModal.show();
        </script>
    }
    else if (!string.IsNullOrEmpty(errorMessage))
    {
        <script>
            document.getElementById('popupMessage').innerText = '@errorMessage';
            var myModal = new bootstrap.Modal(document.getElementById('popupModal'));
            myModal.show();
        </script>
    }
}
