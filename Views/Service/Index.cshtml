@{
    ViewData["Title"] = "Services";
}

<style>
    .card {
        border: none; /* Remove border */
        box-shadow: none; /* Remove shadow */
        padding: 10px;
        cursor: pointer; /* Indicate that the card is clickable */
        transition: transform 0.5s ease-out, opacity 0.5s ease-out; /* Transition for smooth animation */
    }

        .card:hover {
            transform: scale(1.05); /* Scale card on hover */
        }

        .card .card-img-top {
            max-height: 150px;
            object-fit: contain;
        }

        .card .card-body {
            padding: 10px;
        }

        .card .desktop-heading {
            font-size: calc(1rem + 0.3vw);
        }

        .card .mobile-heading {
            font-size: 14px;
            margin-top: 5px;
        }

    /* Animation for card click using transition */
   /*  .card-clicked {
        transform: scale(1.5); 
        opacity: 0.8; 
    } */

    p {
        font-size: calc(0.9rem + 0.3vw);
    }
</style>

<div class="container mt-5">
    <div class="text-center mb-5 animated">
        <h1 class="fw-bold">Our Services</h1>
        <p class="lead">We specialize in Web and App Development using modern technologies to build scalable and efficient solutions.</p>
    </div>

    <div class="row g-2 g-md-3 text-center animated">
        @foreach (var service in new[] {
        new { Name = "Website Development", Image = "https://cdn-icons-png.flaticon.com/512/6132/6132221.png", Url = "service/webdevelopment", Desc = "We build responsive and scalable websites using .NET, Angular, React, and PHP." },
        new { Name = "Application Development", Image = "https://iconape.com/wp-content/png_logo_vector/flutter-logo.png", Url = "service/appdevelopment", Desc = "We build robust mobile apps using Flutter and other cross-platform technologies." },
        new { Name = "E-commerce Solutions", Image = "https://cdn.worldvectorlogo.com/logos/shopify.svg", Url = "service/ecommercesolutions", Desc = "We develop online stores using Shopify, WordPress, and custom solutions." },
        new { Name = "Database Management", Image = "https://cdn-icons-png.flaticon.com/512/5968/5968364.png", Url = "service/databasemanagement", Desc = "We handle data with MSSQL Server and MySQL for high-performance applications." },
        new { Name = "Cloud Solutions", Image = "https://cdn-icons-png.flaticon.com/512/873/873107.png", Url = "service/cloudsolutions", Desc = "We deploy scalable applications on Azure and AWS with best practices." },
        new { Name = "SEO Optimization", Image = "https://cdn-icons-png.flaticon.com/512/2991/2991148.png", Url = "service/seooptimization", Desc = "We enhance your website’s visibility with proven SEO strategies." }
        })
        {
            <div class="col-6 col-md-4 animated">
                <div class="card p-2 h-100" onclick="animateCardAndRedirect('@service.Url', this)">
                    <div class="text-center">
                        <img src="@service.Image" class="card-img-top img-fluid" alt="@service.Name">
                    </div>
                    <div class="card-body">
                        <h5 class="desktop-heading">@service.Name</h5>
                        <p class="mobile-heading d-none d-md-block">@service.Desc</p> <!-- Hidden on mobile -->
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<script>
    function animateCardAndRedirect(url, element) {
        // Add the animation class to the clicked card
        element.classList.add('card-clicked');

        // Prevent page redirect immediately, wait for the animation to finish
        setTimeout(function() {
            window.location.href = url;  // Redirect to the service page
        }, 500);  // Duration of the animation (same as transition duration in CSS)
    }
</script>
