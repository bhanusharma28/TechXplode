@{
    ViewBag.Title = "Application Development";
}

<div class="container py-5 animated">
    <h2 class="text-center mb-4">Application Development</h2>

    <p class="lead text-center">
        We specialize in developing high-performance mobile applications tailored to your business needs. Our developers are experts in creating intuitive, feature-rich, and responsive mobile apps across various platforms using the latest technologies.
    </p>

    <h4 class="text-center mt-4">Our App Development Services</h4>
    <ul class="list-group list-group-flush text-center">
        <li class="list-group-item">Cross-Platform Mobile App Development (Flutter, React Native)</li>
        <li class="list-group-item">Native Mobile App Development (iOS, Android)</li>
        <li class="list-group-item">App Maintenance & Support</li>
    </ul>

    <!-- Technologies We Use Section -->
    <div class="text-center mt-5">
        <h4>Technologies We Use</h4>
        <div class="row justify-content-center">
            <!-- Flutter Icon -->
            <div class="col-3 mb-2 tech-icon-container">
                <img src="https://iconape.com/wp-content/png_logo_vector/flutter-logo.png" class="img-fluid" alt="Flutter" width="180">
                <span class="tech-name">Flutter</span>
            </div>
            <!-- React Native Icon -->
            <div class="col-3 mb-2 tech-icon-container">
                <img src="https://reactnative.dev/img/header_logo.svg" class="img-fluid" alt="React Native" width="180">
                <span class="tech-name">React Native</span>
            </div>
            <!-- Android Icon -->
            <div class="col-3 mb-2 tech-icon-container">
                <img src="https://www.vectorlogo.zone/logos/android/android-icon.svg" class="img-fluid" alt="Android" width="180">
                <span class="tech-name">Android</span>
            </div>
            <!-- iOS Icon -->
            <div class="col-3 mb-2 tech-icon-container">
                <img src="https://www.apple.com/ac/structured-data/images/knowledge_graph_logo.png?202303180120" class="img-fluid" alt="iOS" width="180">
                <span class="tech-name">iOS</span>
            </div>
        </div>
    </div>

    <div class="mt-5">
        <h4 class="text-center">Why Choose Us?</h4>
        <p class="text-center">We follow industry best practices to ensure that your mobile app is fast, secure, and optimized for an excellent user experience.</p>
        <ul class="list-group list-group-flush text-center">
            <li class="list-group-item">✅ High-Performance Mobile Apps</li>
            <li class="list-group-item">✅ Cross-Platform Development</li>
            <li class="list-group-item">✅ Seamless User Interface and Experience</li>
            <li class="list-group-item">✅ App Maintenance & Support</li>
        </ul>
    </div>

    <div class="text-center mt-5">
        <a asp-controller="home" asp-action="contact" class="btn btn-primary btn-lg">Get a Free Consultation</a>
    </div>
</div>

<!-- CSS for Hover Effect -->
<style>
    .tech-icon-container {
        position: relative;
        text-align: center;
    }

    .tech-name {
        position: absolute;
        bottom: 10px;
        left: 50%;
        transform: translateX(-50%);
        background-color: rgba(0, 0, 0, 0.7);
        color: white;
        padding: 5px 10px;
        font-size: 16px;
        opacity: 0;
        transition: opacity 0.3s ease;
    }

    .tech-icon-container:hover .tech-name {
        opacity: 1;
    }
</style>
