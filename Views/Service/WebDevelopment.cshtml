@{
    ViewBag.Title = "Web Development";
}

<div class="container py-5 animated">
    <h2 class="text-center mb-4">Website Development</h2>

    <p class="lead text-center">
        We specialize in building high-performance, scalable, and secure websites tailored to your business needs. Our expert developers leverage the latest technologies to create responsive and dynamic web applications.
    </p>

    <h4 class="text-center mt-4">Our Web Development Services</h4>
    <ul class="list-group list-group-flush text-center">
        <li class="list-group-item">Custom Website Development</li>
        <li class="list-group-item">Single Page Applications (React, Angular)</li>
        <li class="list-group-item">Backend Development (.NET, PHP)</li>
    </ul>

    <div class="text-center mt-5">
        <h4>Technologies We Use</h4>
        <div class="row justify-content-center">
            <!-- First Row -->
            <div class="col-3 mb-2 tech-icon-container">
                <img src="https://cdn-icons-png.flaticon.com/512/6132/6132221.png" class="img-fluid" alt="C#" width="180">
                <span class="tech-name">C#</span>
            </div>
            <div class="col-3 mb-2 tech-icon-container">
                <img src="https://upload.wikimedia.org/wikipedia/commons/7/7d/Microsoft_.NET_logo.svg" class="img-fluid" alt=".NET" width="180">
                <span class="tech-name">.NET</span>
            </div>
            <div class="col-3 mb-2 tech-icon-container">
                <img src="https://cdn-icons-png.flaticon.com/512/1126/1126012.png" class="img-fluid" alt="React" width="180">
                <span class="tech-name">React</span>
            </div>
            <div class="col-3 mb-2 tech-icon-container">
                <img src="https://upload.wikimedia.org/wikipedia/commons/c/cf/Angular_full_color_logo.svg" class="img-fluid" alt="Angular" width="180">
                <span class="tech-name">Angular</span>
            </div>
        </div>
        <div class="row justify-content-center">
            <!-- Second Row -->
            <div class="col-3 mb-2 tech-icon-container">
                <img src="https://cdn-icons-png.flaticon.com/512/888/888859.png" class="img-fluid" alt="HTML" width="180">
                <span class="tech-name">HTML</span>
            </div>
            <div class="col-3 mb-2 tech-icon-container">
                <img src="https://cdn-icons-png.flaticon.com/512/919/919826.png" class="img-fluid" alt="CSS" width="180">
                <span class="tech-name">CSS</span>
            </div>
            <div class="col-3 mb-2 tech-icon-container">
                <img src="https://cdn-icons-png.flaticon.com/512/919/919828.png" class="img-fluid" alt="JavaScript" width="180">
                <span class="tech-name">JavaScript</span>
            </div>
            <div class="col-3 mb-2 tech-icon-container">
                <img src="https://cdn-icons-png.flaticon.com/512/919/919830.png" class="img-fluid" alt="PHP" width="180">
                <span class="tech-name">PHP</span>
            </div>
        </div>
    </div>

    <div class="mt-5">
        <h4 class="text-center">Why Choose Us?</h4>
        <p class="text-center">We follow industry best practices to ensure that your website is fast, secure, and optimized for search engines.</p>
        <ul class="list-group list-group-flush text-center">
            <li class="list-group-item">✅ Scalable and Secure Solutions</li>
            <li class="list-group-item">✅ Mobile-Responsive Designs</li>
            <li class="list-group-item">✅ SEO-Friendly Structure</li>
            <li class="list-group-item">✅ Ongoing Support & Maintenance</li>
        </ul>
    </div>

    <div class="text-center mt-5">
        <a asp-controller="home" asp-action="contact" class="btn btn-primary btn-lg">Get a Free Consultation</a>
    </div>
</div>

<!-- CSS for Hover Effect -->
<style>
    .tech-icon-container {
        position: relative;
        text-align: center;
    }

    .tech-name {
        position: absolute;
        bottom: 10px;
        left: 50%;
        transform: translateX(-50%);
        background-color: rgba(0, 0, 0, 0.7);
        color: white;
        padding: 5px 10px;
        font-size: 16px;
        opacity: 0;
        transition: opacity 0.3s ease;
    }

    .tech-icon-container:hover .tech-name {
        opacity: 1;
    }
</style>
